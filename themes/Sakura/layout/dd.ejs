<link rel="stylesheet" href="/css/dd.css">
<div class="pattern-center-blank"></div>
<div id="content" class="site-content">
  <article class="post-item post-301 page type-page status-publish has-post-thumbnail hentry">
    <header class="page-header"><h1 class="cat-title">誰も大好き</h1> <span class="cat-des"><p>快乐dd</p> </span></header>
    <% if (page.dd) { %>
    <div class="dd">
      <div class="row" id="rootRow">
        <% (page.dd||[]).forEach(function (dd, index) { %>
          <div class="showwindow" id="dd-<%- index %>">
            <div class="card hoverable" style="overflow: visible;">
              <div class="card-image waves-effect waves-block waves-light">
                <div class="activator itempic lazyload" style="background-image: url(<%-dd.img%>);" data-src="<%- dd.img %>">
                </div>
              </div>
              <div class="card-content">
                <div class="card-title should-ellipsis activator grey-text text-darken-4">
                  <%- dd.title %><i class="fa fa-commenting-o right"></i>
                </div>
                <p class="should-ellipsis-full">
                <%- dd.jp %></p>
                <ul class="skill-list">
                  <li class="skill">
                    <div>
                    <%- dd.status %></div>
                    <progress class="skill-1" max="100" value="<%- dd.progress %>">
                    </progress>
                  </li>
                </ul>
              </div>
              <div class="card-reveal" style="display: none; transform: translateY(0%);">
                <span class="card-title grey-text text-darken-4">
                  <%- dd.title %><i class="fa fa-close right"></i>
                </span>
                <span>
                  <%- dd.jp %><br>
                </span>
                <span>
                  直播: <%- dd.time %><span>
                    <p><%- dd.desc %></p>
                    <ul class="skill-list">
                      <li class="skill">
                        <div>
                        <%- dd.status %></div>
                        <progress class="skill-1" max="100" value="<%- dd.progress %>">
                        </progress>
                      </li>
                    </ul>
                  </span>
                </span>
              </div>
            </div>
          </div>
        <% }) %>
      </div>
    </div>
    <% } %>
  </article>
</div>